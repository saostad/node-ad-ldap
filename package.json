{
  "name": "node-ad-ldap",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "ts-node": "ts-node src/app.ts",
    "commands": "npm run lint && npm run format && npm run ts-node",
    "monitor": "nodemon --watch src -e ts --exec \"npm run commands\"",
    "start": "nodemon --watch src -e ts --exec \"npm run ts-node\"",
    "prepublish": "tsc"
  },
  "keywords": [
    "ad",
    "active directory",
    "ldap"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.11",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@types/ldapjs": "0.0.3",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.15"
  }
}
